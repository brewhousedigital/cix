{% for post in postslist | reverse %}
	<div class="row align-items-center position-relative">
		<div class="col-auto mr-3 post-image-thumbnail">
			<img src="/images/posts/{{ post.data.image }}" class="img-fluid rounded" alt="{{ post.data.title }}">
		</div>
		<div class="col position-static">
			<h3 class="mt-0">{{ post.data.title }}</h3>
			<p>{{ post.data.description }}</p>
			<p><a href="{{ post.url | url }}" class="stretched-link">Read More</a></p>
			<p class="mb-0 small text-muted">Posted on <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></p>
		</div>
	</div>






