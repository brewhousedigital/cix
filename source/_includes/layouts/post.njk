---
layout: layouts/base.njk
permalink: /news/{{ title|slugURL }}-{{ date|slugURL }}/
---


<div class="container">
	<div class="post-header-bg p-5 mb-5">
		<h1 class="display-4 mb-0">{{ title }}</h1>
		<p class="mb-0 small text-muted">Posted on <time class="postlist-date" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time></p>
	</div>

	<div class="pb-5 border-bottom mb-5 mx-auto" style="max-width: 700px;">
		{{ content | safe }}
	</div><!-- end spacing -->

	<ul>
		{%- set nextPost = collections.posts | getNextCollectionItem(page) %}
		{%- if nextPost %}<li>Next: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a></li>{% endif %}
		{%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
		{%- if previousPost %}<li>Previous: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a></li>{% endif %}
	</ul>
</div><!-- end container -->


